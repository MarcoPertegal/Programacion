package ejercicio_09;

import utilidades.Leer;

public class Principal 
{

	public static void main(String[] args) 
	{
		//Leer una secuencia de números, hasta que el usuario 
		//introduzca un número negativo y mostrar la suma total de dichos números sin contar el negativo.
		
		int nums=0, num0=0, tope=1;
		
		System.out.println("Bienvenido al programa para calcular la suma de una secuancia de números.");
		System.out.println("/////////////////////////////////////////////////////////////////////////");
		
		do {
			System.out.println("Por favor, introduzca los números que quiere sumar:");
			System.out.println("---------------------------------------------------");
			System.out.println("Introduzca un número negativo para finalizar la suma y mostrar el resultado.");
			System.out.println("Pulse 0 para salir.");
			 
			while(nums>0) {
			nums=Leer.datoInt();
				nums=nums+num0;
			}
			
			
		} while (tope != 0 );
		
		System.out.println("Gracias por usar el programa.");

	}

}
